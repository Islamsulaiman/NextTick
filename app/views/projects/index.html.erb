<h1 class="text-center mt-5 mb-4" style="font-family: 'Montserrat', sans-serif; font-size: 3rem; font-weight: bold;">Projects</h1>

<div class="container py-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th style="font-family: 'Montserrat', sans-serif; font-size: 1.5rem; font-weight: bold;">Name</th>
        <th style="font-family: 'Montserrat', sans-serif; font-size: 1.5rem; font-weight: bold;">Category</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.category.name %></td>
          <td>
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-danger rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden" %>
          </td>
          <td>
            <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New Project", new_project_path, class: "btn btn-danger rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden btn-hover" %>
  </div>
</div>

<style>
  /* Custom button styles */
  .btn-danger {
    background-color: #f44336;
    border-color: #f44336;
  }

  .btn-danger:hover {
    background-color: #e53935;
    border-color: #e53935;
    transform: translateY(-2px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  }

  .btn-danger:focus {
    box-shadow: none;
  }

  .btn-danger span {
    transition: transform 0.3s ease-in-out;
  }

  .btn-danger:hover span:last-child {
    transform: rotate(45deg) translateX(100%);
  }

  .btn-danger:hover span:first-child {
    transform: rotate(-45deg) translateX(100%);
  }

  /* Custom hover effect for "New Project" button */
  .btn-hover {
    position: relative;
    overflow: hidden;
  }

  .btn-hover:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 100%;
    transform: translate(-50%, -50%);
    transition: width 0.3s, height 0.3s, opacity 0.3s;
    opacity: 0;
  }

  .btn-hover:hover:before {
    width: 200%;
    height: 200%;
    opacity: 1;
  }

  /* Custom font for headings */
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

  h1, th {
    font-size: 3rem;
    font-weight: bold;
  }

  th {
    font-size: 1.5rem;
  }
</style>