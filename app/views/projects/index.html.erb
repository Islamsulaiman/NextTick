<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>

    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        
        <td><%= project.category.name %></td>
        <td><%= link_to "Edit", edit_project_path(project) %></td>
        <td><%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Project", new_project_path %>