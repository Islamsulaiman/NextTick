<div class="container py-5">
  <h1 class="text-center mt-5 mb-4" style="font-family: 'Montserrat', sans-serif;">New Project</h1>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(model: @project, url: projects_path(@category), class: "card border-0 shadow p-4") do |form| %>
        <%= form.label :name, class: "font-weight-bold" %>
        <%= form.text_field :name, class: "form-control mb-3", placeholder: "Enter project name" %>

        <%= form.label :category_id, class: "font-weight-bold" %>
        <%= form.select :category_id, Category.all.collect {|c| [c.name, c.id]}, { include_blank: true }, class: "form-control mb-3" %>

        <%= form.submit "Create Project", class: "btn btn-danger rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden btn-hover" %>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-5">
    <%= link_to "Back to Projects", projects_path, class: "btn btn-danger rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden btn-hover" %>
  </div>
</div>

<style>
  /* Custom button styles */
  .btn-danger {
    background-color: #f44336;
    border-color: #f44336;
  }

  .btn-danger:hover {
    background-color: #e53935;
    border-color: #e53935;
    transform: translateY(-2px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  }

  .btn-danger:focus {
    box-shadow: none;
  }

  .btn-danger span {
    transition: transform 0.3s ease-in-out;
  }

  .btn-danger:hover span:last-child {
    transform: rotate(45deg) translateX(100%);
  }

  .btn-danger:hover span:first-child {
    transform: rotate(-45deg) translateX(100%);
  }

  /* Custom hover effect for "Back to Projects" button */
  .btn-hover {
    position: relative;
    overflow: hidden;
  }

  .btn-hover:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 100%;
    transform: translate(-50%, -50%);
    transition: width 0.3s, height 0.3s, opacity 0.3s;
    opacity: 0;
  }

  .btn-hover:hover:before {
    width: 200%;
    height: 200%;
    opacity: 1;
  }

  /* Custom card styles */
  .card {
    border-radius: 0;
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card-body {
    padding: 2rem;
  }

  .form-control {
    border-radius: 0;
    border-color: #dcdcdc;
    font-family: 'Montserrat', sans-serif;
  }

  .form-control:focus {
    border-color: #f44336;
    box-shadow: none;
  }

  .form-control::placeholder {
    color: #bfbfbf;
  }

  /* Custom font for headings and labels */
  .font-weight-bold {
    font-family: 'Montserrat', sans-serif;
    font-weight: bold;
  }

  /* Custom spacing */
  .mb-3 {
    margin-bottom: 1.5rem;
  }

  /* Custom font for headings and labels */
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');
</style>