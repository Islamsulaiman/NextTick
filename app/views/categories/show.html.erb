<div style="max-width: 800px; margin: 0 auto;">

  <!-- Add Flash Messages -->
  <% if flash[:success] %>
    <div id="flash-message" class="alert alert-success">
      <%= flash[:success] %>
    </div>
    
    <!-- JavaScript to Hide Flash Message after 5 Seconds -->
    <script>
    console.log("in the flash")
    setTimeout(function() {
      var flashMessage = document.getElementById('flash-message');
      console.log(flashMessage)
      if (flashMessage) {
        flashMessage.style.display = 'none';
      }
    }, 5000); // Hide after 5 seconds (5000 milliseconds)
    </script>
  <% end %>

  <h1><%= @category.name %></h1>

  <div>
    <a href="<%= edit_category_path(@category) %>" class="btn btn-primary mr-2">Edit</a>
    <%= link_to "Delete", category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-danger" %>
    <a href="<%= categories_path %>" class="btn btn-secondary mt-2">Back</a>
  </div>
</div>


