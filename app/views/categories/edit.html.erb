
    <div style="max-width: 800px; margin: 0 auto;">
      <h1>Edit Category</h1>

      <form action="<%= category_path(@category) %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <div class="form-group">
          <label for="category_name">Name</label>
          <input type="text" class="form-control" id="category_name" name="category[name]" value="<%= @category.name %>">
        </div>

        <button type="submit" class="btn btn-primary">Update Category</button>
      </form>

      <a href="<%= categories_path %>" class="btn btn-secondary mt-2">Back</a>
    </div>
