<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_category_path(category) %>
          <%= link_to "Delete", category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Category", new_category_path %>