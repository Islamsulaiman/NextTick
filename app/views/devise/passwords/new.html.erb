<!-- app/views/devise/passwords/new.html.erb -->

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 card rounded-0 p-4">
      <h2 class="text-center mb-4">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-4">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0", required: true %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary rounded-0 py-2 px-4 text-uppercase font-weight-bold position-relative overflow-hidden" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Override Bootstrap form validation styles */
  .form-control:invalid {
    border-color: #dc3545;
  }

  .form-control:invalid:focus {
    box-shadow: none;
  }

  /* Custom button styles */
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0062cc;
    border-color: #0062cc;
    transform: translateY(-2px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  }

  .btn-primary:focus {
    box-shadow: none;
  }

  .btn-primary span {
    transition: transform 0.3s ease-in-out;
  }

  .btn-primary:hover span:last-child {
    transform: rotate(45deg) translateX(100%);
  }

  .btn-primary:hover span:first-child {
    transform: rotate(-45deg) translateX(100%);
  }
</style>